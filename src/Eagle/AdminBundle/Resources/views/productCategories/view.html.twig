{% extends "::admin_base.html.twig" %}

{% block title %}EagleAdminBundle:productCategories:view{% endblock %}

{% block body %}
    <style>
        .pagination_parent{
            border-bottom: 1px solid #c4c4c4;
            border-bottom-left-radius: 2px;
            border-bottom-right-radius: 2px;
            border-left: 1px solid #c4c4c4;
            border-right: 1px solid #c4c4c4;
            padding: 10px;
            position: relative;
        }

        .ui-pnotify{
            display: none !important;
        }
    </style>
    <div id="content" class="clearfix" ng-app="view_category_app">
        <div class="contentwrapper" ng-controller="viewController"><!--Content wrapper-->           
            

            <div class="heading">

                <h3>Products</h3>                    

                <div class="resBtnSearch">
                    <a href="#"><span class="icon16 brocco-icon-search"></span></a>
                </div>

                <div class="search">

                    <form id="searchform" action="search.html" />
                    <input type="text" id="tipue_search_input" class="top-search" ng-model="searchText" ng-change="search()" placeholder="Search products ..." />
                    <input type="submit" id="tipue_search_button" class="search-btn" value="" />
                    </form>

                </div><!-- End search -->

                {#<ul class="breadcrumb">
                    <li>You are here:</li>
                    <li>
                        <a href="#" class="tip" title="back to dashboard">
                            <span class="icon16 icomoon-icon-screen"></span>
                        </a> 
                        <span class="divider">
                            <span class="icon16 icomoon-icon-arrow-right"></span>
                        </span>
                    </li>
                    <li class="active">Static tables</li>
                </ul>#}

            </div><!-- End .heading-->

            <!-- Build page from here: Usual with <div class="row-fluid"></div> -->




            <div class="row-fluid">

                <div class="span12">

                    <div class="box">

                        <div class="title">

                            <h4>
                                <span class="icon16 brocco-icon-grid"></span>
                                <span>All categories in this store</span>
                                <form class="box-form right" action="" />
                                <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                                    <span class="icon16 iconic-icon-cog"></span>
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
{#                                    <li><a href="#myModal" data-toggle="modal" ng-click="editClick()"><span class="icon-pencil"></span> Edit</a></li>#}
                                    <li><a href="#" ng-click="allDelete()"><span class="icon-trash"></span> Delete</a></li>
                                </ul>
                                </form>

                            </h4>
                            <a href="#" class="minimize">Minimize</a>
                        </div>
                        <div class="content noPad">
                            <table class="responsive table table-bordered" id="checkAll">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Category</th>
                                        <th>Description</th>
                                        <th>Number of products</th>
                                        <th id="masterCh" class="ch">
                                            {#                                            <input type="checkbox" name="checkbox" value="all" class="styled" />#}
                                        </th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="category in categories">
                                        <td>[[category[0].id]]</td>
                                        <td>[[category[0].cat_title]]</td>
                                        <td>[[category[0].cat_desc]]</td>
                                        <td>[[category.products]]</td>
                                        <td class="chChildren">
                                            <input type="checkbox" value="1" class="styled" checklist-model="chkedCategories.ids" checklist-value="category[0].id" />
{#                                            <input type="checkbox" value="1" class="styled" checklist-model="chkedProducts.ids" checklist-value="product.id" />#}
                                        </td>
                                        <td>
                                            <div class="controls center">
                                                <a href="#" title="Edit product" class="tip"><span class="icon12 icomoon-icon-pencil"></span></a>
                                                <a style="cursor: pointer;" title="Delete product" class="tip" ng-click="deleteCategory(category[0].id)"><span class="icon12 icomoon-icon-remove"></span></a>
                                            </div>
                                        </td>
                                    </tr>                                    
                                </tbody>
                            </table>
                        </div>
                        <div class="pagination_parent">
                            <p style="position: absolute;">Showing [[firstEntry]] to [[lastEntry]] of [[totalCategories]] entries</p>
                            <div id="pagination_div"></div>
                        </div>

                    </div><!-- End .box -->

                </div><!-- End .span6 -->



            </div><!-- End .row-fluid -->

            <!-- Page end here -->



        </div><!-- End contentwrapper -->
    </div><!-- End #content -->

</div><!-- End #wrapper -->
{% endblock %}